<h1 class = edit-title>Editing Book</h1>

<% if @book.errors.any? %>
  <div class = error>
    <div class=error-title>
      <%= @book.errors.count %>errors prohibited this book from being saved:
    </div>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<div class=edit-body>
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
<div class=field>
<h4>Title</h4>
  <%= f.text_field :title %>
</div>

<div class = field>
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>
<div class = field>
  <%= f.submit 'Update Book' %>
</div>
<% end %>




<strong class = back><%= link_to "Show", book_path(@book.id) %></strong> | <strong class = back><%= link_to "Back", "/books" %></strong>
